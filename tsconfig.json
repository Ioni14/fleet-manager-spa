{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@styles/*": [
        "assets/styles/*"
      ],
      "@img/*": [
        "assets/img/*"
      ],
      "@fonts/*": [
        "assets/fonts/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "public"]
}
